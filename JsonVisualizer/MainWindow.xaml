<Window 
    x:Class="JsonVisualizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Internal="clr-namespace:JsonVisualizer.Internal"
    Title="MainWindow" 
    MinHeight="480"
    MinWidth="640"
    Background="Black"
    Foreground="White"
    FontFamily="Consolas"
    FontSize="18"
    >
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>                
            
            <Internal:WatermarkTextBox
                Grid.Column="0"
                x:Name="JsonInput"
                AcceptsReturn="true"
                TextChanged="OnJsonChanged"
                VerticalAlignment="Top"
                MaxLines="6"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                WatermarkText="Enter JSON here..."
                />

            <Button
                Grid.Column="2"
                Content="Copy"
                VerticalAlignment="Top"
                Height="36"
                Click="OnClickCopy"
                />
        
        </Grid>
        <ScrollViewer
            Grid.Row="2"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            IsTabStop="false"
            >
            <ContentControl 
                x:Name="JsonOutput"
                IsTabStop="false"
                >

                <TextBlock
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    >
                    <Run 
                        Text="> JsonVisualizer"
                        FontSize="64"
                        Foreground="Purple"
                        />
                </TextBlock>
                
            </ContentControl>
        </ScrollViewer>        
    </Grid>
</Window>
