<Window 
    x:Class="JsonVisualizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" 
    Height="480" 
    Width="640"
    Background="Black"
    Foreground="White"
    FontFamily="Consolas"
    FontSize="18"
    >
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox 
            Grid.Row="0" 
            x:Name="JsonInput" 
            AcceptsReturn="true"
            TextChanged="OnJsonChanged"
            />
        <ScrollViewer
            Grid.Row="2"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            >
            <TextBlock x:Name="JsonOutput" />
        </ScrollViewer>        
    </Grid>
</Window>
